{
  "manifest_version": 3,
  "name": "Focus Blocker",
  "version": "1.0",
  "description": "Block distracting websites to stay focused",
  
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Blocker"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}