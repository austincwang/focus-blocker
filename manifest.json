{
  "manifest_version": 3,
  "name": "Focus Blocker",
  "version": "1.0",
  "description": "Block distracting websites to stay focused",
  
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs"
  ],
  
  "host_permissions": [
    "https://api.emailjs.com/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Focus Blocker"
  },
  
  "web_accessible_resources": [{
    "resources": ["blocked.html", "send-email.html"],
    "matches": ["<all_urls>"]
  }],

  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  }
}
